<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddQuizActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/tv_make_Quiz_Header"
            android:layout_below="@id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="80dp"
            android:text="Please Make Unique\nQuiz Title\nfor your Quiz"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_subject"
            android:layout_below="@+id/tv_make_Quiz_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="Subject"
            android:textColor="@color/MainRedColor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_subject"
         android:layout_marginStart="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:text="Branch"
            android:textColor="@color/MainRedColor"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextQuizTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_branch"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="Add Quiz Title"
            android:inputType="textPersonName"
            android:textColorHint="@color/MainRedColor" />


        <Button
            android:id="@+id/Btn_Continue_Make_Quiz"
            android:elevation="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextQuizTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_botton"
            android:padding="20dp"
            android:text="Continue"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/Btn_Cancle_Make_Quiz"
            android:elevation="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextQuizTitle"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_botton2"
            android:padding="20dp"
            android:text="Cancle"
            android:textColor="@color/MainRedColor" />

    </RelativeLayout>
</layout>